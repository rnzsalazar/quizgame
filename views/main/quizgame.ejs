<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>Quiz Game</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
    >
    <link rel="stylesheet" href="/stylesheets/quizStyle.css">
</head>
<body class="quiz-page">
<%- include('./header') %>
<div class="quiz-box">
    <div class="character-box">
        <p class="char-name">❤️ Frisk</p>
        <div class="health-bar">
            <div id="health-fill"></div>
        </div>
        <p id="hp-text"></p>
    </div>
    <div id="timer-box">Time Left: <span id="timer">30</span>s</div>
    <div id="question-box">
        <div id="play-area"></div>
    </div>
    <div class="mt-4 text-center">
        <button id="next-btn" class="btn btn-primary" disabled>Next</button>
        <div id="result-box" class="mt-3"></div>
    </div>
</div>

<% questions.forEach((q, i) => { %>
    <template id="q-<%= i %>" data-correct="<%= q.answer %>">
        <h3><%= i + 1 %>. <%= q.question %></h3>
        <div class="answers">
            <% ['A', 'B', 'C', 'D'].forEach(letter => { %>
                <button class="answer" data-letter="<%= letter %>">
                    <%= letter %>. <%= q[letter] %>
                </button>
            <% }) %>
        </div>
    </template>
<% }) %>

<script src="/scripts/script.js"></script>
<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
></script>
</body>
</html>